<UserControl x:Class="ChoiceMaster.BooleanScorerEditor"
             x:Name="BooleanScorerEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChoiceMaster"
             mc:Ignorable="d">
    <Grid x:Name="BooleanScorerEditorGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="InitialSetting" Grid.Row="0" Grid.Column="0" Content="Initial Setting" IsChecked="{Binding Path=InitialSetting}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <CheckBox x:Name="TrueIsBetter" Grid.Row="0" Grid.Column="1" Content="True Is Better" IsChecked="{Binding Path=TrueIsBetter}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
